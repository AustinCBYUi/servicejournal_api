{
  "swagger": "2.0",
  "info": {
    "title": "Service Journal API",
    "description": "An application program interface to manage data for the service journal application.",
    "version": "1.0.3",
    "author": "Austin Campbell @ BYU-Idaho"
  },
  "host": "servicejournal-api.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/client/": {
      "get": {
        "description": "Retrieves all clients from the database, returns them in json format.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Response is OK!"
          },
          "500": {
            "description": "Response is NOT OK, something malfunctioned or is not connected correctly."
          }
        }
      },
      "post": {
        "description": "Creates a new client that is sent to be stored in the database in json format.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "John"
                },
                "lastName": {
                  "example": "Doe"
                },
                "age": {
                  "example": "35"
                },
                "streetAddress": {
                  "example": "8707 N Greenway Rd"
                },
                "unit": {
                  "example": "N/A"
                },
                "city": {
                  "example": "Glendale"
                },
                "state": {
                  "example": "AZ"
                },
                "postalCode": {
                  "example": "85047"
                },
                "type": {
                  "example": "Cell"
                },
                "number": {
                  "example": "(623)818-9715"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "POST was successful."
          },
          "500": {
            "description": "POST was unsuccessful."
          }
        }
      }
    },
    "/client/{id}": {
      "get": {
        "description": "Retrieves an individual client from the database by the {id} number.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Client was retrieved successfully."
          },
          "501": {
            "description": "Client ID was not found."
          },
          "500": {
            "description": "Client ID was not retrieved"
          }
        }
      },
      "put": {
        "description": "Updates a client's information in the database, uses modifiedCount to verify if fields were changed.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "John"
                },
                "lastName": {
                  "example": "DoLittle"
                },
                "age": {
                  "example": "34"
                },
                "streetAddress": {
                  "example": "8707 N Greenway Rd"
                },
                "unit": {
                  "example": "N/A"
                },
                "city": {
                  "example": "Glendale"
                },
                "state": {
                  "example": "AZ"
                },
                "postalCode": {
                  "example": "85047"
                },
                "type": {
                  "example": "Cell"
                },
                "number": {
                  "example": "(623)818-9715"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Fields were changed and pushed to the database."
          },
          "500": {
            "description": "Fields were NOT changed, an error occurred."
          }
        }
      },
      "delete": {
        "description": "Deletes a client from the database by {id} number.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Client was deleted from the database."
          },
          "500": {
            "description": "Client was not deleted from the database, an error occurred."
          }
        }
      }
    },
    "/serviceticket/": {
      "get": {
        "description": "Retrieves all service tickets that are stored in the service ticket database.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Response is OK!"
          },
          "500": {
            "description": "Response is NOT OK, something malfunctioned or is not connected correctly."
          }
        }
      },
      "post": {
        "description": "Creates a new service ticket for a client. The cliendId, firstName and lastName should match the client database as well.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "clientId": {
                  "example": "{id}"
                },
                "firstName": {
                  "example": "John"
                },
                "lastName": {
                  "example": "Doe"
                },
                "title": {
                  "example": "General Maintenance"
                },
                "price": {
                  "example": "$40.00"
                },
                "date": {
                  "example": "23OCT2024"
                },
                "mileage": {
                  "example": "34000"
                },
                "desc": {
                  "example": "Oil change. Oil used was Valvoline 10W-30 (5 quarts), and used a AutoZone oil filter."
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Service ticket was created and sent to the database successfully."
          },
          "500": {
            "description": "An error occurred."
          }
        }
      }
    },
    "/serviceticket/{id}": {
      "get": {
        "description": "Retrieves a specific service ticket by the {id} of the service ticket, this endpoint will be updated to search by: customer Id, first name or last name.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Retrieved the service ticket that was requested."
          },
          "501": {
            "description": "The service ticket by {id} was not found."
          },
          "500": {
            "description": "Service ticket was not retrieved, an error occurred."
          }
        }
      },
      "put": {
        "description": "Updates the service ticket in the database, uses modifiedCount to verify if fields were changed.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "clientId": {
                  "example": "{id}"
                },
                "firstName": {
                  "example": "Johnny"
                },
                "lastName": {
                  "example": "Doberman"
                },
                "title": {
                  "example": "General Maintenance"
                },
                "price": {
                  "example": "$40.00"
                },
                "date": {
                  "example": "23OCT2024"
                },
                "mileage": {
                  "example": "34000"
                },
                "desc": {
                  "example": "Oil change. Oil used was Valvoline 10W-30 (5 quarts), and used a AutoZone oil filter."
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Service ticket contents were updated and pushed to the database."
          },
          "500": {
            "description": "Service ticket was not updated, an error occurred."
          }
        }
      },
      "delete": {
        "description": "Deletes a service ticket from the database.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Service ticket was deleted from the database."
          },
          "500": {
            "description": "Service ticket was not deleted, an error occurred."
          }
        }
      }
    }
  }
}